<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.birungi.maureen.phonetracker.MainActivity"
android:orientation="vertical">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/mapicon"
    android:scaleType="centerInside" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Phone Tracker (PT) helps you to find your phone incase it gets lost or stolen. To do this (for now), send an SMS with a secret code to this phone's number and start receiving location update texts. To stop receiving the location updates, send another message with the word stop " />

<View
    android:layout_width="match_parent"
    android:layout_height="0.6dp"
    android:background="#d3d3d3"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="15dp" />

    <LinearLayout
        android:id="@+id/enterStartPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:background="@drawable/list_element"
        android:clickable="true"
        android:padding="@dimen/list_element_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/enter_password_start"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/enterStopPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/list_element_padding"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:background="@drawable/list_element">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/enter_password_stop" />
    </LinearLayout>

</LinearLayout>